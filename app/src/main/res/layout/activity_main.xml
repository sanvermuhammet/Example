<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginEnd="48dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="snap">

                <com.arlib.floatingsearchview.FloatingSearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_marginTop="8dp"
                    app:floatingSearch_backgroundColor="@color/white"
                    app:floatingSearch_close_search_on_keyboard_dismiss="true"
                    app:floatingSearch_dimBackground="false"
                    app:floatingSearch_dividerColor="@color/white"
                    app:floatingSearch_leftActionMode="showSearch"
                    app:floatingSearch_searchBarMarginLeft="8dp"
                    app:floatingSearch_searchBarMarginRight="8dp"
                    app:floatingSearch_searchHint="@string/search"
                    app:floatingSearch_showSearchKey="true"
                    app:floatingSearch_viewTextColor="@color/dark_gray" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="1dp"
                    android:visibility="visible"
                    android:id="@+id/flAlert"
                    app:visibility="@{viewModel.tvAlertLiveData}"
                    android:paddingTop="50dp"
                    android:background="@color/colorPrimary">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/av_splash_animation"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/tvAlertText"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_fileName="anim.json" />

                    <TextView
                        android:id="@+id/tvAlertText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        >

                    </TextView>

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_movies"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:scrollbarThumbVertical="@color/colorAccent"
                    android:scrollbars="vertical"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/rv_movie_item" />

                <ProgressBar
                    android:id="@+id/loading_indicator"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:theme="@style/Theme.AppCompat"
                    android:visibility="invisible" />
            </FrameLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <data>

        <variable
            name="viewModel"
            type="com.sanver.example.ui.main.MainActivityViewModel" />
    </data>
</layout>
